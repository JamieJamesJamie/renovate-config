{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":pinVersions",
    ":maintainLockFilesWeekly",
    ":semanticCommits",
    ":reviewer(JamieJamesJamie)",
    "security:openssf-scorecard",
    ":enablePreCommit",
    "regexManagers:githubActionsVersions",
    "regexManagers:dockerfileVersions"
  ],
  "addLabels": ["dependencies", "{{updateType}}", "{{manager}}"],
  "git-submodules": { "enabled": true },
  "customManagers": [
    {
      "description": "Manager for the Target Framework in .NET project files",
      "managerFilePatterns": [
        "/\\.(?:cs|fs|vb)proj$/",
        "/\\.(?:props|targets)$/"
      ],
      "datasourceTemplate": "dotnet-version",
      "depNameTemplate": "dotnet-sdk",
      "versioningTemplate": "docker",
      "matchStrings": ["<TargetFramework>\\s*net(?<currentValue>(?<major>\\d+)\\.(?<minor>\\d+))\\s*<\/TargetFramework>"]
    },
    {
      "description": "Manager for the dotnet devcontainer feature's .NET SDK version",
      "fileMatch": [
        "^.devcontainer/devcontainer.json$",
        "^.devcontainer.json$"
      ],
      "fileFormat": "json",
      "customType": "jsonata",
      "datasourceTemplate": "dotnet-version",
      "depNameTemplate": "dotnet-sdk",
      "matchStrings": [
        "{ \"currentValue\": features.$sift(function($value, $key) {$key ~> /ghcr.io\\/devcontainers\\/features\\/dotnet/}).*.version }"
      ]
    },
    {
      "description": "Manager for the node devcontainer feature's node version",
      "fileMatch": [
        "^.devcontainer/devcontainer.json$",
        "^.devcontainer.json$"
      ],
      "fileFormat": "json",
      "customType": "jsonata",
      "datasourceTemplate": "node-version",
      "depNameTemplate": "node",
      "matchStrings": [
        "{ \"currentValue\": features.$sift(function($value, $key) {$key ~> /ghcr.io\\/devcontainers\\/features\\/node/}).*.version }"
      ]
    },
    {
      "description": "Manager for the node devcontainer feature's nvm version",
      "fileMatch": [
        "^.devcontainer/devcontainer.json$",
        "^.devcontainer.json$"
      ],
      "fileFormat": "json",
      "customType": "jsonata",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "nvm-sh/nvm",
      "matchStrings": [
        "{ \"currentValue\": features.$sift(function($value, $key) {$key ~> /ghcr.io\\/devcontainers\\/features\\/node/}).*.nvmVersion }"
      ]
    },
    {
      "description": "Manager for the rust devcontainer feature's rust version",
      "fileMatch": [
        "^.devcontainer/devcontainer.json$",
        "^.devcontainer.json$"
      ],
      "fileFormat": "json",
      "customType": "jsonata",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "rust-lang/rust",
      "matchStrings": [
        "{ \"currentValue\": features.$sift(function($value, $key) {$key ~> /ghcr.io\\/devcontainers\\/features\\/rust/}).*.version }"
      ]
    }
  ]
}

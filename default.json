{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":pinVersions",
    ":maintainLockFilesWeekly",
    ":semanticCommits",
    ":reviewer(JamieJamesJamie)",
    "security:openssf-scorecard",
    ":enablePreCommit",
    "regexManagers:githubActionsVersions",
    "regexManagers:dockerfileVersions"
  ],
  "addLabels": ["dependencies", "{{updateType}}", "{{manager}}"],
  "git-submodules": { "enabled": true },
  "customManagers": [
    {
      "description": "Manager for the node devcontainer feature",
      "fileMatch": [
        "^.devcontainer/devcontainer.json$",
        "^.devcontainer.json$"
      ],
      "fileFormat": "json",
      "customType": "jsonata",
      "datasourceTemplate": "node-version",
      "depNameTemplate": "node",
      "matchStrings": [
        "{ \"currentValue\": features.$sift(function($value, $key) {$key ~> /ghcr.io\\/devcontainers\\/features\\/node/}).*.version }"
      ]
    }
  ]
}
